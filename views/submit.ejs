<% layout('layouts/Boilerplate') %>
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
    <link rel="stylesheet" href="/CSS/submit.css" />

<div class="container" id="form_container">
    <form class="add-form" action="/posts" method="POST">
        <div class="row">
            <div class="col-25">
              <label for="fname" class="label_center">Title</label>
            </div>
            <div class="col-75">
              <input type="text" name="title" required placeholder="Title of your post..">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="subject" class="label_center">Subject</label>
            </div>
            <div class="col-75">
              
              <div id="editor" class="subject" required style="height:200px" name="content">
              </div>
              
            </div>
          </div>
          <div class="row">
            <div class="col-25">
            </div>
              <div class="col-75">
                <input type="submit" value="Submit">
            </div>
          </div>

          <input contenteditable="true" type="hidden" style="display: none;" id="hiddenUserInput" name="content">
    </form>    
</div>


<script>
  var toolbarOption =[
    ['bold', 'italic', 'underline', 'strike'],
    ['blockquote', 'code-block'],
    [{'header': 1}, {'header':2}],
    [{'list':'ordered'}, {'list':'bullet'}],
    [{'script':'sub'}, {'script': 'super'}]
  ]
  var quill = new Quill('#editor', {
    modules: {
      toolbar: toolbarOption
    },
    placeholder: '',
    theme: 'snow'
  })
  
  quill.on('text-change', ()=>{
    var text = quill.root.innerHTML;
    document.getElementById('hiddenUserInput').value = text;

  })
</script>